<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/homepagestyle.css" />
  </head>
  <body>
    <div class="wrap">
      <nav class="navbar navbar-dark bg-primary">
        <ul class="navbarItem">
          <li class="nav-item">
            <a class="nav-link" href="/homepage">Home Page</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/auth/logout">Logout</a>
          </li>
        </ul>
      </nav>
      <div class="card text-center">
        <div class="card-header">
          Welcome!
          {{user.username}}
        </div>
        <div class="card-body">
          <h5 class="card-title">Name: {{user.username}}</h5>
          <p class="card-text">Exp:
            {{locals.exp}}</p>
          <div class="progress">
            <div
              class="progress-bar progress-bar-striped"
              role="progressbar"
              style="width: {{locals.bar}}%"
              aria-valuenow="10"
              aria-valuemin="0"
              aria-valuemax="100"
            ></div>
          </div>
          <p class="card-text">Rank: {{locals.rank}}</p>
          <a href="/game" class="btn btn-primary">Go Training</a>
        </div>
        <div class="card-footer text-muted">
        </div>
      </div>
    </div>
  </body>
</html>