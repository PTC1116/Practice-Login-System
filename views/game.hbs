<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/gamepagestyle.css" />
  </head>
  <body>
    <div class="wrapAll">
      <nav class="navbar navbar-dark bg-primary">
        <ul class="navbarItem">
          <li class="nav-item">
            <a class="nav-link" href="/homepage">Home Page</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/auth/logout">Logout</a>
          </li>
        </ul>
      </nav>
      <div class="wrap">
        <div class="start">
          <h1>Vocabulary Training</h1>
          <button type="button" class="btn btn-primary startBtn">START</button>
        </div>
        <div class="intro hide">
          <h2>Introduction</h2>
          <p>Choose the correct vocabulary word to complete the sentence</p>
          <button type="button" class="btn btn-primary okBtn">OK</button>
        </div>
        <div class="content hide">
          <h2 class="question">question1</h2>
          <div class="choices">
            <button
              type="button"
              class="btn btn-primary choiceBtn"
            >answer1</button>
            <button
              type="button"
              class="btn btn-primary choiceBtn"
            >answer2</button>
            <button
              type="button"
              class="btn btn-primary choiceBtn"
            >answer3</button>
            <button
              type="button"
              class="btn btn-primary choiceBtn"
            >answer4</button>
          </div>
          <div class="next">
            <button
              type="button"
              class="btn btn-primary nextBtn visibilityHidden"
            >NEXT</button>
          </div>
        </div>
        <div class="result hide">
          <h2 class="resultTitle">Result</h2>
          <h2 class="resultSubtitle"></h2>
          <hr />
          <span class="resultDetails"></span>
          <button type="button" class="btn btn-primary againBtn">Try Again</button>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/game.js"></script>
  </body>
</html>